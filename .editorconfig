# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space

[*.py]
indent_size = 4

[*.js]
indent_size = 4

[*.json]
indent_size = 4

[*.css]
indent_size = 4

[*.less]
indent_size = 4

[*.scss]
indent_size = 4

[*.sh]
indent_size = 4

[*.html]
indent_size = 2

[*.yml]
indent_size = 2

[Jenkinsfile]
indent_size = 4

[*.groovy]
indent_size = 4

[package.json]
indent_size = 2

[Makefile]
indent_style = tab
