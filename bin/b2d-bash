#!/bin/bash -ex

if [ $(boot2docker status) != "running" ]; then
    boot2docker start
fi
eval $(boot2docker shellinit)

if [ "$(docker ps | grep bedrock_b2d_1)" ]; then
   docker exec -it bedrock_b2d_1 bash
else
    SCRIPT_DIR=${0%/*}
    cd $SCRIPT_DIR/..
    echo Hit enter again to show prompt
    docker-compose run b2d bash
fi