#!/bin/bash
set -ex
if [ ! -e Gruntfile.js ]; then
    # this does not support symlinks
    script_parent_dir=${0%/*}/..
    cd $script_parent_dir
fi
if [ ! "$(which grunt)" ]; then
    npm install -g grunt-cli
fi
if [ ! "$(which jshint)" ]; then
    npm install -g jshint
fi
if [ ! -e node_modules/grunt ]; then
    npm install
fi
grunt
